          </ul>
        </div><!--/.nav-collapse -->      
    </nav>

    <div class="container">
        <form action="/charge" method="post">
            <label>Amount $<span id="price"><%= BTCprice %></span> per MIOTA</label>
            <input style="color:black;" id="quantities" type="number" placeholder="0" value="" />
            <button onclick="output();">Submit</button>
            <p id="result"> </p>
            <br />
            <script type="text/javascript" language="javascript" charset="utf-8">
            var total = 0;
            document.getElementById('result').innerHTML = total
            function output(){        
                var value1 = document.getElementById('price').innerHTML;
                var value2 = document.getElementById('quantities').value;
                total = (value1 * value2).toFixed(2);
                document.getElementById('result').innerHTML = total;
            }
            console.log(total);
            document.write("<script src='//checkout.stripe.com/v2/checkout.js' class='stripe-button' data-key= '<%= keyPublishable %>' data-locale='auto' data-description='Sample Charge' data-amount='" + total + "'>");
            </script>
        </form>
    </div>
